\newlength{\coverleft}
\setlength{\coverleft}{5cm}

\newcommand{\coverblock}[1]{%
  \noindent\hspace*{\coverleft}%
  \parbox[t]{\dimexpr\textwidth-\coverleft\relax}{#1}%
  \par
}

